    "@nomiclabs/hardhat-ethers": "2.2.1",
    "@nomiclabs/hardhat-etherscan": "3.1.2",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.3",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "bs58": "^5.0.0",
    "chai": "4.3.6",
    "check-peer-dependencies": "^4.1.0",
    "dotenv": "^16.0.3",
    "ethers": "5.7.2",
    "hardhat-gas-reporter": "1.0.9",
