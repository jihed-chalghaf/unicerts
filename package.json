  "version": "0.0.1",
  "keywords": [
    "unicerts",
    "smart-contracts",
    "university certificates authenticity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jihed-chalghaf/unicerts"
  },
  "scripts": {
    "node:start": "npx hardhat node",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run --network deploy scripts/deploy.ts",
    "deploy:dev": "npx hardhat run --network localhost scripts/deploy.ts",
    "test:cov": "npx hardhat coverage",
    "clean": "npx hardhat clean",
    "analyze": "slither . --filter-paths 'test|node_modules|scripts'",
    "analyze:triage": "slither . --filter-paths 'test|node_modules|script' --triage-mode"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "hardhat": "^2.12.1"
  },
